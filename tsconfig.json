{
  "compilerOptions": {
    "target": "ES2022",                                  
    "experimentalDecorators": true,                   
    "module": "commonjs",  
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                         
    "skipLibCheck": true,
    "outDir": "transformed",
    "plugins": [{ "transform": "./transform.ts", "type": "raw" }]
  },
  "files": ["source.ts"]
}
